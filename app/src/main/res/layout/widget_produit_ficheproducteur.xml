<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/product_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/display_nom_produit_widget"
        android:layout_width="177dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:text="nom_produit"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/product_picture"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewQDispo"
        android:layout_width="171dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:text="QuantitÃ© dispo :"
        android:textSize="17dp"
        app:layout_constraintStart_toEndOf="@+id/product_picture"
        app:layout_constraintTop_toBottomOf="@+id/display_nom_produit_widget" />

    <ImageView
        android:id="@+id/ajouter_au_panier"
        android:layout_width="61dp"
        android:layout_height="74dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toEndOf="@+id/display_nom_produit_widget"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_panier" />

    <TextView
        android:id="@+id/textViewPrixKG"
        android:layout_width="171dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:text="Prix/kg :"
        android:textSize="17dp"
        app:layout_constraintStart_toEndOf="@+id/product_picture"
        app:layout_constraintTop_toBottomOf="@+id/textViewQDispo" />

</androidx.constraintlayout.widget.ConstraintLayout>

