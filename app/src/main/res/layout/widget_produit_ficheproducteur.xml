<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/product_picture"
        android:layout_width="212dp"
        android:layout_height="126dp"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="171dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/display_nom_produit_widget"
        android:layout_width="124dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:text="nom_produit"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/product_picture"
        tools:layout_editor_absoluteX="78dp" />

    <TextView
        android:id="@+id/display_prixkg_produit_widget"
        android:layout_width="97dp"
        android:layout_height="25dp"
        android:layout_marginTop="4dp"
        android:text="prix_au_kg"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@+id/display_nom_produit_widget"
        tools:layout_editor_absoluteX="78dp" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="87dp"
        android:layout_height="76dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/display_nom_produit_widget"
        app:layout_constraintTop_toBottomOf="@+id/product_picture"
        app:srcCompat="@drawable/logo_panier" />
</androidx.constraintlayout.widget.ConstraintLayout>

