<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/product_picture"
        android:layout_width="236dp"
        android:layout_height="143dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="75dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/display_nom_produit_widget"
        android:layout_width="177dp"
        android:layout_height="22dp"
        android:text="nom_produit"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/ajouter_au_panier"
        app:layout_constraintTop_toBottomOf="@+id/product_picture" />

    <TextView
        android:id="@+id/display_qtédispo_produit_widget"
        android:layout_width="47dp"
        android:layout_height="23dp"
        android:text="display_qtédispo"
        android:textSize="17dp"
        app:layout_constraintEnd_toStartOf="@+id/ajouter_au_panier"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantité dispo :"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@+id/display_nom_produit_widget"
        tools:layout_editor_absoluteX="87dp" />

    <TextView
        android:id="@+id/display_prixkg_fiche_produit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="display_pirxkg"
        android:textSize="17dp"
        app:layout_constraintEnd_toStartOf="@+id/ajouter_au_panier"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView26"
        app:layout_constraintTop_toTopOf="@+id/textView26" />

    <ImageView
        android:id="@+id/ajouter_au_panier"
        android:layout_width="61dp"
        android:layout_height="74dp"
        app:layout_constraintTop_toBottomOf="@+id/product_picture"
        app:srcCompat="@drawable/logo_panier"
        tools:layout_editor_absoluteX="264dp" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="69dp"
        android:layout_height="21dp"
        android:text="Prix/kg :"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="87dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

